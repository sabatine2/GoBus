      <div id="error_explanation">
        <h4 class="text-center"> Preencha todos os campos obrigat√≥rios (*): </h4>
      </div>
    <% end %>
  <br>
    <div class="form-group">
      <%= f.label :placa, class: "control-label" %>
      <%= f.text_field :placa, class: "form-control" %>
    </div>
