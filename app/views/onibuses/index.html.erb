<p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-lg-12">
      <br>
        <h1 class="page-header">
          GoBus <small>- Seu tempo em suas mãos</small>
        </h1>
        <ol class="breadcrumb">
          <li class="active">
            <i class="fa fa-home"></i>  Painel de Controle
          </li>
        </ol>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><i class="fa fa-fw fa-map-marker"></i> Ônibus</h3>
        </div>
        <div class="panel-body table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Placa</th>
                <th>Ativo</th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>

            <tbody>
              <% @onibuses.each do |onibus| %>
                <tr>
                  <td><%= onibus.placa %></td>
                    <% if onibus.ativo == true %>
                      <td>Sim</td>
                    <% else %>
                      <td>Não</td>
                    <% end %>
                  <td><%= button_to 'Mostrar', onibus, :class => "btn btn-success", :method => :get %></td>
                  <td><%= button_to 'Editar', edit_onibus_path(onibus), :class => "btn btn-success", :method => :get %></td>
                  <td><%= button_to 'Deletar', onibus, :class => "btn btn-danger" ,method: :delete %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <br>
          <div>
            <%= button_to 'Novo Ônibus', new_onibus_path, :class => "btn btn-primary center-block", :method => :get %>
          </div>
        </div>
      </div>
    </div>
  </div>
