<%= form_for(@usuario) do |f| %>
  <div id="conteudo-form" class="panel-body">
    <% if @usuario.errors.any? %>
      <div id="error_explanation">
        <h4 class="text-center"> Preencha todos os campos obrigat√≥rios (*): </h4>
      </div>
    <% end %>
  <br>
    <div class="form-group">
      <%= f.label :nome, class: "control-label" %>
      <%= f.text_field :nome, :maxlength => 45, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :email, class: "control-label" %>
      <%= f.text_field :email, :maxlength => 80, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :login, class: "control-label" %>
      <%= f.text_field :login, :maxlength => 25, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :senha, class: "control-label" %>
      <%= f.password_field :senha, :maxlength => 10, class: "form-control" %>
    </div>

      <div id="conteudo-form" class="actions text-center"><br>
        <div class="btn-group">
          <%= f.submit 'Salvar', :class => 'btn btn-success' %>
        </div>
        <%= link_to 'Voltar', usuarios_path, :class => 'btn btn-warning', :method => :get %>
      </div>
  </div>
<% end %>