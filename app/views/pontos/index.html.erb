<p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-lg-12">
      <br>
        <h1 class="page-header">
          GoBus <small>- Seu tempo em suas m√£os</small>
        </h1>
        <ol class="breadcrumb">
          <li class="active">
            <i class="fa fa-home"></i>  Painel de Controle
          </li>
        </ol>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><i class="fa fa-fw fa-map-marker"></i> Pontos</h3>
        </div>
        <div class="panel-body table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Latitude</th>
                <th>Longitude</th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>

            <tbody>
              <% @pontos.each do |ponto| %>
                <tr>
                  <td><%= ponto.latitude %></td>
                  <td><%= ponto.longitude %></td>
                  <td><%= button_to 'Mostrar', ponto, :class => "btn btn-success", :method => :get %></td>
                  <td><%= button_to 'Editar', edit_ponto_path(ponto), :class => "btn btn-success", :method => :get %></td>
                  <td><%= button_to 'Deletar', ponto, :class => "btn btn-danger" , method: :delete %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <br>
          <div>
            <%= button_to 'Novo Ponto', new_ponto_path, :class => "btn btn-primary center-block", :method => :get %>
          </div>
        </div>
      </div>
    </div>
  </div>
