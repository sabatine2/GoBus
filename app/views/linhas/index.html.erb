<p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-lg-12">
      <br>
        <h1 class="page-header">
          GoBus <small>- Seu tempo em suas mãos</small>
        </h1>
        <ol class="breadcrumb">
          <li class="active">
            <i class="fa fa-home"></i>  Painel de Controle
          </li>
        </ol>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><i class="fa fa-fw fa-map-marker"></i> Linhas</h3>
        </div>
        <div class="panel-body table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Número</th>
                <th>Descrição</th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>

            <tbody>
              <% @linhas.each do |linha| %>
                <tr>
                  <td><%= linha.numero %></td>
                  <td><%= linha.descricao %></td>
                  <td><%= button_to 'Mostrar', linha, :class => "btn btn-success", :method => :get %></td>
                  <td><%= button_to 'Editar', edit_linha_path(linha), :class => "btn btn-success", :method => :get %></td>
                  <td><%= button_to 'Deletar', linha, :class => "btn btn-danger" ,method: :delete %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <br>
          <div>
            <%= button_to 'Nova Linha', new_linha_path, :class => "btn btn-primary center-block", :method => :get %>
          </div>
        </div>
      </div>
    </div>
  </div>