<p id="notice"><%= notice %></p>

<h1>Listing Ruas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Rotum</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ruas.each do |rua| %>
      <tr>
        <td><%= rua.nome %></td>
        <td><%= rua.rotum %></td>
        <td><%= link_to 'Show', rua %></td>
        <td><%= link_to 'Edit', edit_rua_path(rua) %></td>
        <td><%= link_to 'Destroy', rua, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

