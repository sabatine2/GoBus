<%= form_for(@rotum) do |f| %>
  <div id="conteudo-form" class="panel-body">
  <% if @rotum.errors.any? %>
      <div id="error_explanation">
        <h4 class="text-center"> Preencha todos os campos obrigat√≥rios (*): </h4>
      </div>
    <% end %>
  <br>
    <div class="form-group">
      <%= f.label :destino, class: "control-label" %>
      <%= f.text_field :destino, list: "destino", class: "form-control" %>
      <datalist id="destino">
        <option value="Teste">
      </datalist>
    </div>
    <div class="form-group">
    <%= f.label :origem, class: "control-label" %>
    <%= f.text_field :origem, class: "form-control" %>
    </div>
      <div id="conteudo-form" class="actions text-center"><br>
        <div class="btn-group">
          <%= f.submit 'Salvar', :class => 'btn btn-success' %>
        </div>
        <%= link_to 'Voltar', rota_path, :class => 'btn btn-warning', :method => :get %>
      </div>
  </div>
<% end %>

