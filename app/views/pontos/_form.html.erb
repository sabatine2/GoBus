<%= form_for(@ponto) do |f| %>
  <div id="conteudo-form" class="panel-body">
  <% if @ponto.errors.any? %>
      <div id="error_explanation">
        <h4 class="text-center"> Preencha todos os campos obrigat√≥rios (*): </h4>
      </div>
    <% end %>
  <br>
    <div class="form-group">
      <%= f.label :latitude, class: "control-label" %>
      <%= f.text_field :latitude, :id=>"lat", class: "form-control" %>
    </div>
    <div class="form-group">
    <%= f.label :longitude, class: "control-label" %>
    <%= f.text_field :longitude, :id=>"lng", class: "form-control" %>
    </div>
      <div id="conteudo-form" class="actions text-center"><br>
        <div class="btn-group">
          <%= f.submit 'Salvar', :class => 'btn btn-success' %>
        </div>
        <%= link_to 'Voltar', pontos_path, :class => 'btn btn-warning', :method => :get %>
      </div>
  </div>
  
           <div id="map-canvas" class="conteudo-form">
<% end %>
