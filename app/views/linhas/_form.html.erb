<%= form_for(@linha) do |f| %>
  <div id="conteudo-form" class="panel-body">
    <% if @linha.errors.any? %>
      <div id="error_explanation">
        <h4 class="text-center"> Preencha todos os campos obrigat√≥rios (*): </h4>
      </div>
    <% end %>
  <br>
    <div class="form-group"><br>
      <%= f.label :numero, class: "control-label" %>
      <%= f.number_field :numero, class: "form-control" %>
    </div>

    <div class="form-group">
    <%= f.label :descricao, class: "control-label" %><br>
    <%= f.text_field :descricao, class: "form-control" %>
    </div>
      <div id="conteudo-form" class="actions text-center"><br>
        <div class="btn-group">
          <%= f.submit 'Salvar', :class => 'btn btn-success' %>
        </div>
        <%= link_to 'Voltar', linhas_path, :class => 'btn btn-warning', :method => :get %>
      </div>
  </div>
<% end %>