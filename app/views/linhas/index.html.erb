<p id="notice"><%= notice %></p>

<h1>Listing Linhas</h1>

<table>
  <thead>
    <tr>
      <th>Numero</th>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @linhas.each do |linha| %>
      <tr>
        <td><%= linha.numero %></td>
        <td><%= linha.descricao %></td>
        <td><%= link_to 'Show', linha %></td>
        <td><%= link_to 'Edit', edit_linha_path(linha) %></td>
        <td><%= link_to 'Destroy', linha, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

